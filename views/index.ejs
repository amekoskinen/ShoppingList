<% layout('layouts/boilerplate') -%>

<div class="row">
  <div class="col-12 text-center homepage">
    <div class="d-flex m-auto justify-content-center">
      <div class="py-5 text-center homepage-box">
        <img
          src="/images/shopping-cart.png"
          width="70"
          height="70"
          alt="shopping-cart logo"
        />
        <h1 class="display-5 fw-bold text-white">Shopping List</h1>
        <div class="col-lg-6 mx-auto">
          <p class="lead mb-4">
            Check the prices of your shopping list quickly!
          </p>
          <div class="d-flex gap-2 justify-content-center">
            <a
              href="/shoppinglist/showlist"
              class="btn btn-primary btn-lg px-5 gap-5"
            >
              Show List
            </a>
            <a
              href="/shoppinglist/additems"
              class="btn btn-info btn-lg px-5 gap-5"
            >
              Add Items
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
