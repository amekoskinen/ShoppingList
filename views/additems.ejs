<% layout('layouts/boilerplate') -%>
<div class="row">
  <div class="col-md-6 offset-md-3">
    <form
      class="form-inline my-5 text-center text-light"
      action="/shoppinglist/getitems"
      method="POST"
    >
      <div class="form-group">
        <label for="address" class="h3">URL address:</label>
        <input
          type="text"
          id="address"
          name="address"
          class="form-control mx-sm-3"
          aria-describedby="addressHelp"
          value="<%=address%>"
        />  
        <p id="addressHelp" class="text-muted">
          URL address for category starting with "https://www.s-kaupat.fi/tuotteet/"
        </p>
      </div>
      <button type="submit" class="btn btn-primary">Find Items</button>
    </form>

    <div class="row">
      <div class="col-md-8 offset-md-2">
      <form action="/shoppinglist/additems" method="POST">
      <% if (typeof products !== "undefined" && products){%>
        <% for (let i=0; i<products.length; i++) {%>
        <div class="form-check m-2">
        <input class="form-check-input" type="checkbox" style="height:22px;width:22px;" class="mx-5" name="<%=products[i]%>" id="<%=i%>">
        <label class="form-check-label h6" for="<%=i%>">
          <%=products[i]%> - <%=prices[i]%> â‚¬
        </label>
        </div>
        <%}%>
        <button type="submit" class="btn btn-primary">Add items</button>
      <%}%>
      </form>
      </div>
    </div>

    </div>
  </div>
  </div>
</div>
