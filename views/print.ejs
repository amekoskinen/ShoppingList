<% layout('layouts/boilerplate') -%>

<section class="pb-4 flex-grow-1">
  <div class="border rounded-3 homepage">
    <section class="px-4 py-3 w-100">
      <style>
        .card-registration
          .select-input.form-control[readonly]:not([disabled]) {
          font-size: 1rem;
          line-height: 2.15;
          padding-left: 0.75em;
          padding-right: 0.75em;
        }
        .card-registration .select-arrow {
          top: 13px;
        }
      </style>
      <div class="row">
        <div class="col-12">
          <div
            class="card card-registration card-registration-2"
            style="border-radius: 20px"
          >
            <div class="card-body p-0">
              <div class="row g-0">
                <div class="col-lg-8">
                  <div class="p-5">
                    <div
                      class="d-flex justify-content-between align-items-center mb-5"
                    >
                      <h1 class="fw-bold mb-0">Shopping List</h1>
                      <h6 class="mb-0 text-muted"><%=allItems%> items</h6>
                    </div>
                    <hr/>
                    <% for (let product of products) { %>
                        <% if (product.quantity > 0){%>
                    <div class="row d-flex justify-content-between align-items-center">
                      <div class="col-md-3 col-lg-3 col-xl-3">
                        <p><%=product.name%></p>
                      </div>
                      <div class="col-md-3 col-lg-3 col-xl-3">
                        <p><strong><%=product.quantity%></strong> pc(s)</p>
                      </div>
                      <div class="col-md-2 col-lg-2 col-xl-2">
                        <p>price: <%= product.price %> €</p>
                      </div>
                    </div>
                        <% } %>
                    <% } %>
                    <hr/>
                    <div class="pt-5">
                        <button onclick="window.print()">Print this page</button>
                        <a href="/shoppinglist/showlist" class="btn btn-danger">
                          Back to Shopping List
                        </a>
                        <a href="/shoppinglist" class="btn btn-info">
                          Back to Home Page
                        </a>
                    </div>
                  </div>
                </div>

                <div class="col-lg-4 bg-body-tertiary">
                  <div class="p-5">
                    <h3 class="fw-bold mb-3 mt-2 pt-1">Summary</h3>
                    <hr class="my-4" />
                    <div class="d-flex justify-content-between mb-4">
                      <h5 class="text-uppercase">ALL ITEMS</h5>
                      <h5><%= totalPrice %> €</h5>
                    </div>
                    <div class="mb-3">
                        <h5 class="text-uppercase text-start">Additional expenses</h5>
                        <% for (let add of additionalItems) { %>
                        <h6><%= add.name %>: <%= add.price %> €</h6>
                        <% } %>
                    </div>
                    <div class="d-flex flex-column text-start">
                      <h5 class="text-uppercase">Total with additional items:</h5>
                      <h6><%= overallPrice %> €</h6>
                    </div>
                    <div>
                      <h5 class="text-start">Notes:</h5>
                      <div class="mb-1">
                        <h6><%=notes?.name || ""%></h6>
                      </div>
                    </div>
                    
                    <div>
                      <h5 class="text-start">My Budget:</h5>
                      <h6><%=budget.money || ""%> €</h6>
                      </div>
                    <div>
                      <h5 class="text-start mb-3">Money Left:</h5>
                      <div class="mb-3">
                        <h6 class="text-start"><%=moneyLeft || ""%> €</h6>
                      </div>
                    </div>
                  </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</section>
